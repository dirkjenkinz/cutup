<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>CutUpMachineNo7</title>
        <link rel="stylesheet" href="../css/style.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    </head>

    <body>
        <div class='container-fluid'>
            <div class='row' style="background-image: url('./images/image2.jpg');">
                <div class='col-md-6'>
                    <h1 class='black-text'>Cut-Up Machine No. 7</h1>
                </div>
            </div>
            <div class='row display'>
                <div class='col-md-4 display'>
                    <label class="form-label" for="pallet">Select input file</label>
                    <input type="file" id="pallet" name="pallet">
                </div>
                <div class='col-md-2'>
                    <label class="form-label" for="output">Name of output file</label>
                    <input type="text" class="form-control" id="output"/>
                </div>
                <div class='col-md-3'>
                    <br>
                    <button class='btn btn-danger btn-block' id='save'>Save</button>
                </div>
            </div>
            <div class='row display'>
                <div class='col-md-4 display'>
                    {{pallet}}
                </div>
                <div class='col-md-3 display' id='middle-image'>
                    <p>
                        <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                        <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                        <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                        <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                        <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                        <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
                    </p>
                </div>
                <div class='col-md-5 display'>
                    {{words1}}
                    <br/>
                    {{words2}}
                    <br/>
                    {{words3}}
                    <br/>
                    {{words4}}
                    <br/>
                    {{words5}}
                    <br/>
                    {{words6}}
                    <br/>
                    {{words7}}
                    <br/>
                    {{words8}}
                    {{saved}}
                </div>
            </div>
            <script>
                $('#save').on('click', () => {
                    if ($('#output').val().length > 0) {
                        window.location.href = `/save?output=${$('#output').val()}`
                    }
                }),
                $('#pallet').on('change', () => {
                    const p = $('#pallet')
                        .val()
                        .substring(12);
                    window.location.href = `/cutup?pallet=${p}`
                })
            </script>
        </body>
    </html>